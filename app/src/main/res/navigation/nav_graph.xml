<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/todoFragment"
        android:name="com.demo.todocrudapp.ui.home.TodoFragment"
        android:label="ToDo Crud App"
        tools:layout="@layout/fragment_todo">
        <action
            android:id="@+id/action_todoFragment_to_todoAddFragment"
            app:destination="@id/todoAddFragment" >
            <argument
                android:name="todo_id"
                android:defaultValue="-1" />
        </action>

        <action
            android:id="@+id/action_todoFragment_to_detailTaskFragment"
            app:destination="@id/detailTaskFragment" >

            <argument
                android:name="title"
                android:defaultValue="@null"
                app:argType="string"
                app:nullable="true" />

            <argument
                android:name="data"
                android:defaultValue="@null"
                app:argType="com.demo.todocrudapp.data.network.model.TodoTasks"
                app:nullable="true" />

        </action>


    </fragment>
    <fragment
        android:id="@+id/todoAddFragment"
        android:name="com.demo.todocrudapp.ui.home.TodoAddFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_todo_add">
        <action
            android:id="@+id/action_todoAddFragment_to_todoFragment"
            app:destination="@id/todoFragment"
            app:popUpTo="@id/todoFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="title"
            app:argType="string" />
      <argument
            android:name="todos"
            app:argType="com.demo.todocrudapp.data.network.model.TodoTasks" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.demo.todocrudapp.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/todoFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.demo.todocrudapp.ui.auth.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.demo.todocrudapp.ui.auth.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up"/>

    <action
        android:id="@+id/action_todoFragment"
        app:destination="@id/todoFragment"
        app:popUpTo="@id/signInFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/detailTaskFragment"
        android:name="com.demo.todocrudapp.ui.todo_detail.DetailTaskFragment"
        android:label="fragment_detail_task"
        tools:layout="@layout/fragment_detail_task">
        <argument
            android:name="title"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="data"
            android:defaultValue="@null"
            app:argType="com.demo.todocrudapp.data.network.model.TodoTasks"
            app:nullable="true" />

    </fragment>
</navigation>